{
  "name": "hellosanjay-portfolio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "build:analyze": "ANALYZE=true next build",
    "start": "next start",
    "lint": "eslint --max-warnings=0",
    "lint:strings": "eslint --rule 'local-rules/no-hardcoded-strings: error' --max-warnings=0 'src/**/*.{ts,tsx}'",
    "format": "prettier --write .",
    "ts:check": "tsc --noEmit",
    "analyze:unused": "npx --yes knip",
    "analyze:tsprune": "ts-prune --project tsconfig.json",
    "analyze:deps": "depcheck --ignore-bin-package=true --skip-missing=true",
    "analyze:graph": "madge --ts-config tsconfig.json --circular --extensions ts,tsx src",
    "analyze:all": "mkdir -p ./_reports && yarn analyze:tsprune > ./_reports/ts-prune.txt && yarn analyze:deps > ./_reports/depcheck.txt && yarn analyze:unused > ./_reports/knip.txt && echo 'Analysis complete. Check ./_reports/ directory.'",
    "analyze:bundle": "yarn build:analyze",
    "perf:lighthouse": "npx --yes @lhci/cli@latest autorun --config=.lighthouserc.json",
    "perf:check": "echo 'Running performance checks...' && yarn build && yarn start & sleep 5 && yarn perf:lighthouse && kill %1",
    "prune:components": "node scripts/prune-components.mjs",
    "check:all": "yarn ts:check && yarn lint && yarn lint:strings && yarn build",
    "ci": "yarn install --frozen-lockfile && yarn ts:check && yarn lint && yarn lint:strings && yarn build",
    "ci:no-unused": "yarn ci && yarn analyze:tsprune && yarn analyze:deps",
    "ci:perf": "yarn ci && yarn perf:check"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-hover-card": "^1.1.15",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@tabler/icons-react": "^3.35.0",
    "@tsparticles/engine": "^3.9.1",
    "@tsparticles/react": "^3.0.0",
    "@tsparticles/slim": "^3.9.1",
    "@types/react-syntax-highlighter": "^15.5.13",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.546.0",
    "mini-svg-data-uri": "^1.4.4",
    "motion": "^12.23.24",
    "next": "15.5.5",
    "next-mdx-remote": "^5.0.0",
    "next-themes": "^0.4.6",
    "qss": "^3.0.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-syntax-highlighter": "^15.6.6",
    "remark-gfm": "^4.0.1",
    "rough-notation": "^0.5.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "^15.5.6",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "depcheck": "^1.4.7",
    "eslint": "^9",
    "eslint-config-next": "15.5.5",
    "madge": "^8.0.0",
    "tailwindcss": "^4",
    "ts-prune": "^0.10.3",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
